@page
@using Microsoft.AspNetCore.Authentication
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center container">
    <h1 class="display-4">Welcome To Lilla Kors</h1>
    <div class="row">
        <div class="col-4">
            <img class="img-fluid" src="~/images/Picture1.png" />
        </div>
        <div class="col-8">
            <p>We are a None profit orgnisation, we are setout to help people in need</p>
        </div>
    </div>


    <environment include="Development">
        <pre>
            @Model.AccessToken
        </pre>
        <h2>Claims</h2>
        <dl>
            @foreach (var claim in User.Claims)
            {
                <dt>@claim.Type</dt>
                <dd>@claim.Value</dd>
            }
        </dl>

        <h2>Properties</h2>

        <dl>
            @foreach (var prop in (await HttpContext.AuthenticateAsync()).Properties?.Items)
            {
                <dt>@prop.Key</dt>
                <dd>@prop.Value</dd>
            }
        </dl>

    </environment>
</div>
